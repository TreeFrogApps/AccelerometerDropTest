<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.SensorTestActivity"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startButton"
            android:text="@string/button_start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/stopButton"
            android:text="@string/button_stop"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@android:color/white"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Raw X :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rawX"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Raw Y :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rawY"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Raw Z :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rawZ"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <View
        android:background="@android:color/white"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Gravity X :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gravX"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Gravity Y :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gravY"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Gravity Z :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gravZ"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@android:color/white"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Accel X :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/accelX"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Accel Y :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/accelY"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="Accel Z :"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/accelZ"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@android:color/white"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>
